<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bggrey"
    tools:context=".TeamDetailsAdminEachMember">

    <ProgressBar
        android:id="@+id/progressBarTeamDetailsAdminEachMember"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:padding="20dp"
                    android:text="Analytics"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_edges_bottom"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:padding="20dp"
                    android:text="Number of issues solved per day:"
                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                    android:drawableTint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linegraph"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/nexabold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:padding="20dp"
                    android:text="Number of issues solved per topic:"
                    android:drawableLeft="@drawable/ic_baseline_arrow_right_24"
                    android:drawableTint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/hori_bargraph"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:fontFamily="@font/nexabold"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:padding="10dp"
                    android:text="Analysis Report:"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_edges_bottom"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/asdasd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/yellow"
                    android:text="Most sought after topic:"
                    android:textSize="12dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/rounded_edges_dark"
                    android:layout_marginHorizontal="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/most_sought_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/asdasd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/yellow"
                    android:text="The least productive day is:"
                    android:textSize="12dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/rounded_edges_dark"
                    android:layout_marginHorizontal="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/least_productive_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/asdasd3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/yellow"
                    android:text="The most productive day is:"
                    android:textSize="12dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/rounded_edges_dark"
                    android:layout_marginHorizontal="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/most_productive_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/asdasd44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/yellow"
                    android:text="The average number of issues solved per day is:"
                    android:textSize="12dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/rounded_edges_dark"
                    android:layout_marginHorizontal="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/average"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexabold"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>