<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TeamDetailsAdminEachMember"
    android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No of Issues Solved according to the dates"
                    android:textSize="20dp"
                    android:padding="20dp"
                    android:textColor="@color/lBlack"
                    android:textStyle="bold" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linegraph"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No of Issues Solved according to the topics"
                    android:textSize="20dp"
                    android:padding="20dp"
                    android:textColor="@color/lBlack"
                    android:textStyle="bold" />
                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/hori_bargraph"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analysis Report : "
                    android:textSize="25dp"
                    android:padding="20dp"
                    android:textColor="@color/lBlack"
                    android:textStyle="bold" />

        </LinearLayout>
</ScrollView>