<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newIssuePage"
    android:background="@drawable/im4">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:text="Raise an Issue:"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="@font/nexabold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/raise_issue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Title" />
        <EditText
            android:id="@+id/raise_issue_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Description" />
        <EditText
            android:id="@+id/raise_issue_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Credits" />
        <EditText
            android:id="@+id/raise_issue_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Link" />
        <EditText
            android:id="@+id/raise_issue_duedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Duedate" />
        <EditText
            android:id="@+id/raise_issue_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Tags" />

        <com.sanojpunchihewa.glowbutton.GlowButton
            android:id="@+id/raiseIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexatextbold"
            android:textAllCaps="false"
            android:padding="25dp"
            android:textColor="@color/lBlack"
            app:cornerRadius="10dp"
            app:unpressedGlowSize="18dp"
            app:pressedGlowSize="25dp"
            app:glowColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:text="Raise" />
    </LinearLayout>

</FrameLayout>