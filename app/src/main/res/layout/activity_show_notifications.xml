<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggrey"
    tools:context=".ShowNotifications">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="700dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:background="@drawable/notification_icon"
        android:backgroundTint="#C3C1C1"/>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:fontFamily="@font/nexabold"
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edges_bottom"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="Alerts!" />

        <ListView
            android:id="@+id/listView_notifications_emp"
            android:layout_width="match_parent"
            android:divider="@android:color/transparent"
            android:padding="25dp"
            android:dividerHeight="10.0sp"
            android:layout_height="match_parent" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageviewNotifications"
        android:layout_width="250dp"
        android:layout_height="295dp"
        android:background="@drawable/nothing2_image_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>