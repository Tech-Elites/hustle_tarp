<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggrey"
    tools:context=".feedPageAdmin">

    <ProgressBar
        android:id="@+id/progressBarFeedPageAdmin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageviewFeedpageAdmin"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:background="@drawable/nothing2_image_back"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:background="@drawable/rounded_edges_bottom"
                android:id="@+id/textView10"
                android:text="Pending Feed"
                android:textColor="@color/white"
                android:paddingHorizontal="30dp"
                android:paddingVertical="20dp"
                android:textSize="40dp"
                android:fontFamily="@font/nexabold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/sandwatchImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sandwatchpng"
                />

        </LinearLayout>

        <ListView
            android:id="@+id/all_issues_feed_admin"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:dividerHeight="8dp"
            android:divider="@android:color/transparent"
            android:padding="8dp"
            >

        </ListView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>