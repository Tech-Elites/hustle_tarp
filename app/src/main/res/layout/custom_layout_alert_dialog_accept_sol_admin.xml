<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/rounded_edges_more"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accept_sol_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/nexabold"
            android:paddingVertical="5dp"
            android:textSize="20dp"
            android:text="Accept Solution?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/yellow"
                android:fontFamily="@font/nexabold"
                android:text="Link: " />

            <TextView
                android:id="@+id/link_sol_admin_alert_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/yellow"
                android:fontFamily="@font/nexabold"
                android:text="Description:" />

            <TextView
                android:id="@+id/comment_sol_admin_alert_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/negative_alert_dialog_accept_sol_admin"
                android:onClick="RegisterButton"
                android:textColor="@color/white"
                app:buttonColor="#363636"
                app:unpressedGlowSize="18dp"
                app:pressedGlowSize="25dp"
                app:glowColor="@color/colorPrimary"
                android:paddingVertical="25dp"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:text="No" />


            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/positive_alert_dialog_accept_sol_admin"
                android:onClick="RegisterButton"
                android:textColor="@color/white"
                app:buttonColor="#363636"
                app:unpressedGlowSize="18dp"
                app:pressedGlowSize="25dp"
                app:glowColor="@color/colorPrimary"
                app:cornerRadius="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:text="Yes" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>