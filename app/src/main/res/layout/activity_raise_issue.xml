<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RaiseIssue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/raise_issue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Title" />
        <EditText
            android:id="@+id/raise_issue_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Description" />
        <EditText
            android:id="@+id/raise_issue_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Credits" />
        <EditText
            android:id="@+id/raise_issue_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Link" />
        <EditText
            android:id="@+id/raise_issue_duedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="Duedate" />

        <Button
            android:id="@+id/raiseIssue"
            android:layout_width="match_parent"
            android:onClick="raise_issue"
            android:layout_height="wrap_content"
            android:text="Raise" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>