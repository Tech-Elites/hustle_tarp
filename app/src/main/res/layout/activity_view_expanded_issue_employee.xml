<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggrey"
    tools:context=".ViewExpandedIssueEmployee">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_edges_bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_employee_expanded_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:paddingVertical="15dp"
                android:paddingLeft="20dp"
                android:text="TextView"
                android:textColor="@color/yellow"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/asdasdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edges_dark"
                android:fontFamily="@font/nexabold"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:text="Description:"
                android:textColor="@color/yellow"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/desc_employee_expanded_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/asdasdad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edges_dark"
                android:fontFamily="@font/nexabold"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:text="Credits:"
                android:textColor="@color/yellow"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/credits_employee_expanded_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:padding="15dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/asdasdad23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edges_dark"
                android:fontFamily="@font/nexabold"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:text="Link:"
                android:textColor="@color/yellow"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/link_employee_expanded_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:padding="15dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/asdasdad4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edges_dark"
                android:fontFamily="@font/nexabold"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:text="Due:"
                android:textColor="@color/yellow"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/duedate_employee_expanded_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:padding="15dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/asdasdad5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edges_dark"
                android:fontFamily="@font/nexabold"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:text="Tags:"
                android:textColor="@color/yellow"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tags_employee_expanded_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexabold"
                android:padding="15dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="right"
                android:background="@drawable/finish_icon"
                android:backgroundTint="@color/black" />

            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/finishbuttonEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/nexatextbold"
                android:onClick="finishButtonEmployee"
                android:padding="25dp"
                android:layout_gravity="center_vertical"
                android:text="Finish"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:cornerRadius="10dp"
                app:glowColor="@color/white"
                app:pressedGlowSize="25dp"
                app:unpressedGlowSize="18dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>