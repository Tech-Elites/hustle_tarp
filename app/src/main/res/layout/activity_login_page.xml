<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_login"
    tools:context=".LoginPage">

    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_weight="0.65"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:padding="30dp"
            android:text="Ready to hustle?"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LoginPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_edges"
        android:backgroundTint="@color/loginYellow"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingLeft="80dp"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/Header">

        <EditText
            android:id="@+id/LoginPageEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:backgroundTint="@color/black"
            android:drawableStart="@drawable/mail_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/nexatextbold"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="#595959"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/LoginPagePassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/black"
            android:drawableStart="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:ems="10"
            android:fontFamily="@font/nexatextbold"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#595959"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nexabold"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/loginRedButtons"

            android:onClick="LoginPageLoginButton"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="18dp"

            app:cornerRadius="10dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"

            android:layout_marginBottom="20dp"
            android:text="Dont Know Us?"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/SignUpLoginPage"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:backgroundTint="#ffeec8"
            android:onClick="RegisterButton"
            android:text="Sign Up"
            android:textColor="@color/loginRedButtons"
            android:textSize="18dp"
            app:cornerRadius="10dp" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarLoginPage"
        style="?android:attr/progressBarStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>